

<div class="container">
<div class="wrapper">
    <header><img src="https://www.mercurynews.com/wp-content/uploads/2019/01/OCR-L-CARLSJR-0103.jpg?w=481">
    <h1>Eat-A-(Vegan)Burger!</h1></header>
</div>
<div class="wrapper">
 </div>
    <div class="row">
      <div class="col-md-4">
        <h2>Order Up!</h2>
        <ul class="list-unstyled">
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-md-4">
        <h2>Build Your Burger</h2>
        <form class="create-form">
          <div class="row">
            <div class="col-md-8">
              <div class="form-group">
                <label for="ca">Order:</label>
                <input type="text" id="ca" name="name">
              </div>
            </div>
          </div>

          <button type="submit">Order Burger</button>
        </form>
      </div>
      <div class="col-md-4">
        <h2>Delicious Burgers You've Enjoyed</h2>
        <ul class="list-unstyled">
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
  </div>
  </div>
</div>

